<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/new_app_background"
tools:context="smartAmigos.com.nammakarnataka.DistrictListFragment">


<smartAmigos.com.nammakarnataka.fonts.titles_font
    android:id="@+id/xtt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:padding="12dp"
    android:text="DISTRICTS"
    android:textColor="#ffffff"
    android:textSize="28sp" />


<ListView
    android:divider="@null"
    android:id="@+id/districtsList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/xtt" />


</RelativeLayout>

