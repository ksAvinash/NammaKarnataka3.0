<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/new_app_background"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/suggestRating_Card"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <smartAmigos.com.nammakarnataka.fonts.titles_font
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/suggestRatings_Label"
                />

            <RatingBar
                android:id="@+id/suggestRatingsBar"
                android:layout_below="@+id/suggestRatings_Label"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                />
            <Button
                android:layout_margin="10dp"
                android:layout_below="@+id/suggestRatingsBar"
                android:id="@+id/suggestRating_Button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_button"
                android:text="RATE"
                android:textColor="@color/colorWhite" />


            <TextView
                android:padding="8dp"
                android:layout_below="@+id/suggestRating_Button"
                android:id="@+id/suggestRating_Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not sure? Cancel rating"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/suggestAvgTimeSpent_Card"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <smartAmigos.com.nammakarnataka.fonts.titles_font
                    android:padding="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/suggestAvgTimeSpent_Label"
                    />
                <EditText
                    android:layout_below="@+id/suggestAvgTimeSpent_Label"
                    android:layout_margin="20dp"
                    android:id="@+id/suggestAvgTimeSpent_Value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    />
                <Button
                    android:layout_margin="10dp"
                    android:layout_below="@+id/suggestAvgTimeSpent_Value"
                    android:id="@+id/suggestAvgTimeSpent_Button"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_button"
                    android:text="SUGGEST US"
                    android:textColor="@color/colorWhite" />


                <TextView
                    android:padding="8dp"
                    android:layout_below="@+id/suggestAvgTimeSpent_Button"
                    android:id="@+id/suggestAvgTimeSpent_Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not sure? Cancel suggestion"
                    />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/place_details_fragment_view"
        >
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#212121"
                android:orientation="vertical" />


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/place_image"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#212121"
                android:orientation="vertical" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardElevation="2dp">

                <smartAmigos.com.nammakarnataka.fonts.titles_font
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/placename_textView"
                    android:layout_width="wrap_content"
                    android:textAllCaps="true"
                    android:textSize="28sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryText"
                    />
            </android.support.v7.widget.CardView>


            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <android.support.v7.widget.CardView
                        android:id="@+id/place_gallery_card"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardElevation="4dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/place_gallery_icon"
                                android:src="@drawable/gallery_icon"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="4dp"
                                android:layout_centerHorizontal="true"
                                />
                            <smartAmigos.com.nammakarnataka.fonts.description_font_bold
                                android:layout_below="@+id/place_gallery_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Gallery"
                                />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/place_favourite_card"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardElevation="4dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/place_favourite_icon"
                                android:src="@drawable/favourite_icon"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="4dp"
                                android:layout_centerHorizontal="true"
                                />
                            <smartAmigos.com.nammakarnataka.fonts.description_font_bold
                                android:layout_below="@+id/place_favourite_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FAV"
                                android:layout_centerHorizontal="true"
                                />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/place_visited_card"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardElevation="4dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/place_visited_icon"
                                android:src="@drawable/visited_icon"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="4dp"
                                android:layout_centerHorizontal="true"
                                />
                            <smartAmigos.com.nammakarnataka.fonts.description_font_bold
                                android:layout_below="@+id/place_visited_icon"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Visited"
                                />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/place_averageTimeSpent_card"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardElevation="4dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/place_averageTimeSpent_icon"
                                android:src="@drawable/timespent_icon"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="4dp"
                                android:layout_centerHorizontal="true"

                                />

                            <smartAmigos.com.nammakarnataka.fonts.description_font_bold
                                android:layout_below="@+id/place_averageTimeSpent_icon"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/place_averageTimeSpent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg Time"
                                />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/place_ratings_card"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardElevation="4dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/place_ratings_icon"
                                android:src="@drawable/ratings_icon"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="4dp"
                                android:layout_centerHorizontal="true"
                                />

                            <smartAmigos.com.nammakarnataka.fonts.description_font_bold
                                android:id="@+id/place_ratings"
                                android:layout_below="@+id/place_ratings_icon"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ratings"
                                />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/place_imagesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />


            <android.support.v7.widget.CardView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <smartAmigos.com.nammakarnataka.fonts.description_font_bold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="DESCRIPTION"
                        android:textColor="@color/colorSecondaryText"
                        android:textAllCaps="true"
                        android:textSize="18sp" />

                    <View style="@style/Divider" />

                    <smartAmigos.com.nammakarnataka.fonts.description_font
                        android:id="@+id/description_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="16sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <smartAmigos.com.nammakarnataka.fonts.description_font_bold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAllCaps="true"
                        android:text="BEST SEASON"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="18sp" />

                    <View style="@style/Divider" />

                    <smartAmigos.com.nammakarnataka.fonts.description_font
                        android:id="@+id/bestSeason_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="16sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <smartAmigos.com.nammakarnataka.fonts.description_font_bold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAllCaps="true"
                        android:text="Additional Information"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="18sp" />

                    <View style="@style/Divider" />

                    <smartAmigos.com.nammakarnataka.fonts.description_font
                        android:id="@+id/additionalInformation_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="16sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <View style="@style/Divider" />

            <Button
                android:id="@+id/place_navigate_now"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12dp"
                android:background="@drawable/rounded_button"
                android:text="NAVIGATE NOW"
                android:textColor="@color/colorWhite" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
